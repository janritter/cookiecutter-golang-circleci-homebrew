{
    "verifyConditions": [
        "@semantic-release/github"
    ],
    "prepare": [
        {
            "path": "@semantic-release/changelog",
            "changelogFile": "CHANGELOG.md"
        },
        {
            "path": "@semantic-release/git",
            "assets": "CHANGELOG.md"
        }
    ],
    "publish": [
        "@semantic-release/github",
        {
            "path": "semantic-release",
            "name": "{{cookiecutter.github_username}}/{{cookiecutter.project_slug}}"
        }
    ],
    "branches": [
        "main"
    ],
    "tagFormat": "${version}"
}